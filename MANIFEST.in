# Include package metadata
include LICENSE
include README.md
include CHANGELOG.md
include pyproject.toml

# Include package marker for typing
include src/votingai/py.typed

# Include documentation
recursive-include docs *.md *.rst *.txt *.py
recursive-include docs *.png *.jpg *.gif *.svg

# Include examples (useful for users)
recursive-include examples *.py *.md *.txt *.json

# Include tests (for source distributions only)
recursive-include tests *.py *.json *.yaml *.yml

# Exclude development and build artifacts
exclude .gitignore
exclude .github
recursive-exclude .github *
exclude .venv
recursive-exclude .venv *
exclude htmlcov
recursive-exclude htmlcov *
exclude .coverage
exclude coverage.xml
exclude .pytest_cache
recursive-exclude .pytest_cache *
exclude .mypy_cache
recursive-exclude .mypy_cache *
exclude .ruff_cache
recursive-exclude .ruff_cache *

# Exclude benchmark files (not needed in distribution)
exclude run_benchmarks.py
exclude benchmarks
recursive-exclude benchmarks *
exclude benchmark_results
recursive-exclude benchmark_results *

# Exclude compiled Python files
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude __pycache__
global-exclude *.so
global-exclude .DS_Store